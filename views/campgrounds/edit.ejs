<%- layout("layouts/boilerplate") %>
	<h1>Edit the campground</h1>
	<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
		<div>
			<label for="title">Title:</label>
			<input type="text" id="title" placeholder="Title" name="campground[title]" value="<%= campground.title %>">
		</div>
		<div>
			<label for="location">Location:</label>
			<input type="text" id="location" placeholder="Location" name="campground[location]"
				value="<%= campground.location %>">
		</div>
		<button>Update the campground</button>
	</form>
	<footer>
		<a href="/campgrounds/<%= campground._id %>">Back to campground</a>
	</footer>